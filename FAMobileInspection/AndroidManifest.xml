<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nomenipsum.famobileinspection"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="9" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nomenipsum.famobileinspection.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nomenipsum.famobileinspection.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nomenipsum.famobileinspection.ClientsPage"
            android:label="@string/title_activity_clients_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nomenipsum.famobileinspection.ScanActivity"
            android:label="@string/title_activity_scan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nomenipsum.famobileinspection.ManageUserAccounts"
            android:label="@string/title_activity_manage_user_accounts"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nomenipsum.famobileinspection.EquipmentView"
            android:label="@string/title_activity_equipment_view"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nomenipsum.famobileinspection.ClientInfoPage"
            android:label="@string/title_activity_client_info_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.nomenipsum.famobileinspection.ShowUserAccounts"
            android:label="@string/title_activity_show_user_accounts" >
        </activity>
        <activity
            android:name="com.nomenipsum.famobileinspection.SelectUser"
            android:label="@string/title_activity_select_user" >
        </activity>
    </application>

</manifest>
